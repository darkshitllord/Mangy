<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ListView?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.MainController">

    <TextField fx:id="searchBar" promptText="Enter manga title"/>
    <Button text="Search" onAction="#searchButtonClicked"/>
    <ListView fx:id="resultListView"/>
    <ListView fx:id="chaptersListView"/>
    <ImageView fx:id="mangaImageView" fitWidth="200" fitHeight="200"/>

</HBox>
