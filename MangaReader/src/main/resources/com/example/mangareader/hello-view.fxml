<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.MainController">

    <TextField fx:id="searchBar" promptText="Enter manga title"/>
    <Button text="Search" onAction="#searchButtonClicked" style="-fx-background-color: #555555; -fx-text-fill: white;"/>
    <ListView fx:id="resultListView"/>
    <ListView fx:id="chaptersListView"/>
    <Button text="Previous" onAction="#previousButtonClicked" style="-fx-background-color: #555555; -fx-text-fill: white;"/>
    <StackPane fx:id="imageStackPane" HBox.hgrow="ALWAYS">
        <ImageView fx:id="mangaImageView" preserveRatio="true"/>
    </StackPane>
    <Button text="Next" onAction="#nextButtonClicked" style="-fx-background-color: #555555; -fx-text-fill: white;"/>

</HBox>
