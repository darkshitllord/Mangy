<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>

<StackPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ImageController">

    <children>
        <HBox spacing="10">
            <Button text="Previous" onAction="#showPreviousImage"/>
            <ImageView fx:id="imageView"/>
            <Button text="Next" onAction="#showNextImage"/>
        </HBox>
    </children>
</StackPane>
